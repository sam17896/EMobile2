<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bk">

    <TextView
        android:id="@+id/user_fn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_ln"
        android:layout_alignStart="@+id/user_ln"
        android:layout_centerVertical="true"
        android:text="@string/first_name"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/user_ln"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_g"
        android:layout_alignStart="@+id/user_g"
        android:layout_below="@+id/user_fn"
        android:layout_marginTop="18dp"
        android:text="@string/last_name"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/user_g"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user_ln"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/gender"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/user_c"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_g"
        android:layout_alignStart="@+id/user_g"
        android:layout_below="@+id/user_g"
        android:layout_marginTop="16dp"
        android:text="@string/country"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/user_dob"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_c"
        android:layout_alignStart="@+id/user_c"
        android:layout_below="@+id/user_c"
        android:layout_marginTop="16dp"
        android:text="@string/date_of_birth"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/user_ofn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/user_fn"
        android:layout_alignBottom="@+id/user_fn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/user_oln"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/user_ln"
        android:layout_alignBottom="@+id/user_ln"
        android:layout_alignLeft="@+id/user_ofn"
        android:layout_alignStart="@+id/user_ofn"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/user_og"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/user_g"
        android:layout_alignBottom="@+id/user_g"
        android:layout_alignLeft="@+id/user_oln"
        android:layout_alignStart="@+id/user_oln" />

    <TextView
        android:id="@+id/user_oc"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/user_c"
        android:layout_alignBottom="@+id/user_c"
        android:layout_alignLeft="@+id/user_og"
        android:layout_alignStart="@+id/user_og" />

    <TextView
        android:id="@+id/user_odob"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_dob"
        android:layout_alignLeft="@+id/user_oc"
        android:layout_alignStart="@+id/user_oc"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/bk"/>


</RelativeLayout>