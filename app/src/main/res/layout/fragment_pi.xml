<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bk">

    <TextView
        android:id="@+id/user_fn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="24dp"
        android:text="First Name:"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/user_ln"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/user_fn"
        android:layout_alignRight="@+id/user_fn"
        android:layout_below="@+id/user_fn"
        android:layout_marginTop="29dp"
        android:textColor="#FFFFFF"
        android:text="Last Name:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/user_g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_ln"
        android:layout_alignStart="@+id/user_ln"
        android:layout_below="@+id/user_ln"
        android:layout_marginTop="29dp"
        android:text="Gender:"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/user_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_g"
        android:layout_alignStart="@+id/user_g"
        android:layout_below="@+id/user_g"
        android:layout_marginTop="27dp"
        android:text="Country:"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/user_dob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_c"
        android:layout_alignStart="@+id/user_c"
        android:layout_below="@+id/user_c"
        android:layout_marginTop="31dp"
        android:text="Date of Birth:"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/user_ofn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/user_ln"
        android:layout_marginLeft="59dp"
        android:textColor="#FFFFFF"
        android:layout_marginStart="59dp"
        android:layout_toEndOf="@+id/user_fn"
        android:layout_toRightOf="@+id/user_fn"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/user_oln"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_alignBaseline="@+id/user_ln"
        android:layout_alignBottom="@+id/user_ln"
        android:layout_alignLeft="@+id/user_ofn"
        android:layout_alignStart="@+id/user_ofn" />

    <TextView
        android:id="@+id/user_og"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/user_c"
        android:layout_alignLeft="@+id/user_oln"
        android:layout_alignStart="@+id/user_oln" />

    <TextView
        android:id="@+id/user_oc"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/user_dob"
        android:textColor="#FFFFFF"
        android:layout_alignLeft="@+id/user_og"
        android:layout_alignStart="@+id/user_og"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/user_odob"
        android:layout_width="200dp"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_dob"
        android:layout_alignLeft="@+id/user_oc"
        android:layout_alignStart="@+id/user_oc"
        android:textSize="20dp" />
</RelativeLayout>