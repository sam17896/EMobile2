<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/link_type"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:textColor="#FFFFFF"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/link_number"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/link_type"
        android:layout_alignBottom="@+id/link_type"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:textColor="#FFFFFF"
        android:layout_toEndOf="@+id/link_type"
        android:layout_toRightOf="@+id/link_type"
        android:text="TextView"
        android:textSize="18sp" />
</RelativeLayout>